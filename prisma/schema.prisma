generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String       @unique
  attendance Attendance[]
}

model Attendance {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  date          DateTime
  inTime        DateTime?
  outTime       DateTime?
  workedHours   Float
  expectedHours Float
  isLeave       Boolean

  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])

  @@unique([employeeId, date])
}



